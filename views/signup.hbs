<div class="image-background-signup">
<div class="container-login">
  <div class="header">        
    <img src="../images/logo-new.svg" alt="" />
  </div>      
  {{#if success_msg}}
    <div class="alert alert-success">{{success_msg}}</div>
  {{/if}}
  {{#if error_msg}}
    <div class="alert alert-error">{{error_msg}}</div>
  {{/if}}
  {{#if error}}
    <div class="alert alert-error">{{error}}</div>
  {{/if}}
  {{#if user}}
    <div class="alert alert-error">Username is taken already</div> 
  {{/if}}
  {{#if mail}}
    <div class="alert alert-error">Email is taken already</div>
  {{/if}}
  {{#if errors}}
    {{#each errors}}
      <div class="alert alert-error">{{msg}}</div>
    {{/each}}
  {{/if}}
  <form method="post" action="/users/signup"> 
    <div class="form-group singup-foorm">    
      <i class="fas fa-envelope-open"></i><input type="email" class="form-group__control" placeholder="Email" name="email">
    </div>
    <div class="form-group singup-foorm">
      <i class="fas fa-user"></i> <input type="text" class="form-group__control" placeholder="Username" name="username">
    </div>   
    <div class="form-group singup-foorm">    
      <i class="fas fa-lock"></i><input type="password" class="form-group__control" placeholder="Password" name="password">
    </div>
    <div class="form-group singup-foorm">
      <i class="fas fa-lock"></i><input type="password" class="form-group__control" placeholder="Confirm Password" name="password2">
    </div>
    <div class="form-group">
    <button type="submit" class="signup-btn signup-btn--margin-top">SIGN UP</button>
    </div>
  </form>
<a href="login" class="form-group__login-btn" style="margin-top:-5px; margin-bottom: 10px;">LOG IN</a>
</div>
</div>